@model SportsPro.Models.DomainModels.Products
@{
    ViewData["Title"] = $"{ViewBag.Action}";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<h2>@ViewBag.Action</h2>
<form asp-action="EditProduct2" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label">Code</label>
        <input asp-for="ProductCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="YearlyPrice" class="form-label">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control" type="number" step="0.01" placeholder="0.00" />
    </div>
    <div class="mb-3">
        <label asp-for="ReleaseDate" class="form-label">Release Date</label>
        <output asp-for="ReleaseDate" class="form-control">@Model.ReleaseDate</output>
    </div>
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-outline-primary btn-dark">Save</button>
    <a asp-controller="Products" asp-action="ProductList" class="btn btn-outline-secondary btn-dark">Cancel</a>
</form>
