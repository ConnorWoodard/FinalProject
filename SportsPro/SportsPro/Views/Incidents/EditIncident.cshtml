@model AddEditIncidentViewModel
@{
    ViewData["Title"] = (Model.Operation == "Add") ? "Add Incident" : "Edit Incident";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<h1>@ViewBag.Action</h1>
<form asp-action="EditIncident" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="CurrentIncident.CustomerId" class="form-label">Customer</label>
        <select asp-for="CurrentIncident.CustomerId" asp-items="new SelectList(ViewBag.Customers, nameof(Customers.CustomerId), nameof(Customers.FullName))" class="form-select">
            <option value="">Select a customer</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CurrentIncident.ProductId" class="form-label">Product</label>
        <select asp-for="CurrentIncident.ProductId" asp-items="new SelectList(ViewBag.Products, nameof(Products.ProductId), nameof(Products.Name))" class="form-select">
            <option value="">Select a product</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CurrentIncident.Title" class="form-label">Title</label>
        <input asp-for="CurrentIncident.Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CurrentIncident.Description" class="form-label">Description</label>
        <textarea asp-for="CurrentIncident.Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="CurrentIncident.TechnicianId" class="form-label">Technician</label>
        <select asp-for="CurrentIncident.TechnicianId" asp-items="new SelectList(ViewBag.Technicians, nameof(Technicians.TechnicianId), nameof(Technicians.Name))" class="form-select">
            <option value="-1">Select a Technician</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="CurrentIncident.DateOpened" class="form-label">Date Opened</label>
        <input asp-for="CurrentIncident.DateOpened" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CurrentIncident.DateClosed" class="form-label">Date Closed</label>
        <input asp-for="CurrentIncident.DateClosed" class="form-control" />
    </div>
    <input type="hidden" asp-for="CurrentIncident.IncidentId" />
    <input type="hidden" asp-for="Operation" />
    <input type="hidden" asp-for="DisplayFilter" value="@Model.DisplayFilter" />
    <button type="submit" class="btn btn-outline-primary btn-dark">Save</button>
    <a asp-controller="Incidents" asp-action="IncidentList" class="btn btn-outline-secondary btn-dark">Cancel</a>
</form>